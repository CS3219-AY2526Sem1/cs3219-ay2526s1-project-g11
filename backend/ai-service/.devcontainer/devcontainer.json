{
  "name": "FastAPI Dev Environment",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "-e",
    "PORT=8000"
  ],
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "AI Service",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "uv sync --frozen",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  }
}
